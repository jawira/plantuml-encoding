<?xml version="1.0" encoding="UTF-8"?>

<project name="plantuml-encoding"
         description="Encoding function for PlantUML"
         default="setup"
         phingVersion="3.0">

  <target name="setup"
          description="Prepare project for development"
          depends="phive:install, phing:visualizer, composer:install, php:version"/>

  <target name="phive:download">
    <httpget dir="bin" followRedirects="true" url="https://phar.io/releases/phive.phar" filename="phive"/>
    <chmod file="bin/phive" mode="0755"/>
  </target>

  <target name="phive:install" depends="phive:download">
    <exec executable="bin/phive" passthru="true" checkreturn="true">
      <arg value="install"/>
    </exec>
  </target>

  <target name="phing:visualizer">
    <visualizer/>
  </target>

  <target name="composer:install" description="Install for dev">
    <composer composer="bin/composer" command="install">
      <arg value="--no-suggest"/>
      <arg value="--no-interaction"/>
      <arg value="--profile"/>
      <arg value="--prefer-dist"/>
    </composer>
  </target>

  <target name="qa" depends="composer:validate, phpstan:analyse"/>

  <target name="php:version" description="Get current PHP version">
    <exec executable="php" passthru="true" checkreturn="true">
      <arg value="--version"/>
    </exec>
  </target>

  <target name="composer:validate" description="Validate composer.json">
    <composer composer="bin/composer" command="validate">
      <arg value="--no-interaction"/>
      <arg value="--profile"/>
      <arg value="--strict"/>
    </composer>
  </target>

  <target name="phpstan:analyse">
    <exec executable="bin/phpstan" checkreturn="true" passthru="true">
      <arg line="--level=max --no-interaction --no-progress"/>
      <arg value="analyse"/>
      <arg path="src"/>
    </exec>
  </target>

  <target name="changelog:links" description="Update links in changelog file">
    <composer composer="bin/composer" command="require">
      <arg value="symplify/changelog-linker"/>
    </composer>
    <exec executable="vendor/bin/changelog-linker">
      <arg value="link"/>
    </exec>
    <composer composer="bin/composer" command="remove">
      <arg value="symplify/changelog-linker"/>
    </composer>
  </target>

</project>
